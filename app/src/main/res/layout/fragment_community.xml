<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.CommunityFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#EBEBEB">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="게시판"
                android:textSize="30sp"
                android:textStyle="bold" />
            <Button
                android:id="@+id/frag_community_refresh_btn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/ic_refresh" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">
            <RadioGroup
                android:id="@+id/content_radiogroup"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10dp">
                <RadioButton
                    android:id="@+id/frag_community_recent_btn"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/selector_radio_button_none"
                    android:button="@null"
                    android:gravity="center"
                    android:text="최신글"
                    android:textStyle="bold"
                    android:textColor="@drawable/selector_radio_text" />
                <RadioButton
                    android:id="@+id/frag_community_favorite_btn"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/selector_radio_button_none"
                    android:button="@null"
                    android:gravity="center"
                    android:text="인기글"
                    android:textStyle="bold"
                    android:textColor="@drawable/selector_radio_text" />
            </RadioGroup>

            <Button
                android:id="@+id/frag_community_write_btn"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginTop="7dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/button_shape_write"
                android:text="글쓰기"
                android:textColor="#28C3C5"
                android:textStyle="bold" />
        </RelativeLayout>
        <View
            android:layout_marginTop="3dp"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#B7B7B7"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/frag_community_recent_recycler"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/frag_community_favorite_recycler"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone" />
        </RelativeLayout>




    </LinearLayout>
</FrameLayout>