<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailRoomActivity"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#F5F5F5">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="350dp">

                    <androidx.viewpager.widget.ViewPager
                        android:id="@+id/detailroom_pager"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                    <com.tbuonomo.viewpagerdotsindicator.SpringDotsIndicator
                        android:id="@+id/detailroom_image_indicator"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="5dp"
                        app:dampingRatio="0.5"
                        app:dotsColor="#27B2AB"
                        app:dotsCornerRadius="100dp"
                        app:dotsSize="16dp"
                        app:dotsSpacing="6dp"
                        app:dotsStrokeColor="#27B2AB"
                        app:dotsStrokeWidth="2dp"
                        app:stiffness="300" />

                    <Button
                        android:id="@+id/detailroom_back_btn"
                        android:layout_width="30dp"
                        android:layout_height="27dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        android:layout_marginStart="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/ic_back_white"
                        tools:ignore="SpeakableTextPresentCheck" />

                    <Button
                        android:id="@+id/detailroom_favorite_btn"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="15dp"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/ic_favorite_white" />

                    <Button
                        android:visibility="gone"
                        android:id="@+id/detailroom_share_btn"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/ic_share" />
                </RelativeLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="5dp"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:orientation="vertical"
                android:padding="8dp"
                android:background="@drawable/layout_shape"
                android:gravity="center_vertical">
                <TextView
                    android:id="@+id/detailroom_price_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="월세 500/45"
                    android:textSize="24sp"
                    android:textColor="#000000"/>
                <TextView
                    android:id="@+id/detailroom_title_textview2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13dp"
                    android:text="제목"
                    android:textSize="14sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/ic_oneroomicon"/>
                    <TextView
                        android:id="@+id/detailroom_roomkinds_textview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginTop="15dp"
                        android:text="원룸"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#27B2AB"/>
                </LinearLayout>
                <View
                    android:layout_width="1dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center"
                    android:background="#B7B7B7"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/ic_management_fee"/>
                    <TextView
                        android:id="@+id/detailroom_adminfee_textview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginTop="15dp"
                        android:text="히히"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#27B2AB"/>
                </LinearLayout>
                <View
                    android:layout_width="1dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center"
                    android:background="#B7B7B7"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/ic_floornum"/>
                    <TextView
                        android:id="@+id/detailroom_floor_textview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginTop="15dp"
                        android:text="250층"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#27B2AB"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:background="#FFFFFF"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="상세 정보"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="25dp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#EFEFEF"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginHorizontal="10dp"/>
                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="1dp"
                    android:background="#DFDFDF"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginVertical="15dp">
                    <TableRow
                        android:minHeight="45dp">
                        <TextView
                            android:paddingLeft="5dp"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="방 종류"
                            android:textSize="14sp"
                            android:background="#EFEFEF"/>
                        <TextView
                            android:paddingLeft="10dp"
                            android:id="@+id/detailroom_kind_textview"
                            android:background="#FFFFFF"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:gravity="center_vertical"
                            android:text="aa"
                            android:textSize="14sp"/>
                    </TableRow>
                    <TableRow
                        android:minHeight="45dp">
                        <TextView
                            android:paddingLeft="5dp"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="면적"
                            android:textSize="14sp"
                            android:background="#EFEFEF"/>
                        <TextView
                            android:paddingLeft="10dp"
                            android:id="@+id/detailroom_area_textview"
                            android:background="#FFFFFF"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:gravity="center_vertical"
                            android:text="aa"
                            android:textSize="14sp"/>
                    </TableRow>
                    <TableRow
                        android:minHeight="45dp"
                        android:layout_marginTop="1dp">
                        <TextView
                            android:paddingLeft="5dp"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="옵션"
                            android:textSize="14sp"
                            android:background="#EFEFEF"/>
                        <TextView
                            android:paddingLeft="10dp"
                            android:id="@+id/detailroom_option_textview"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:gravity="center_vertical"
                            android:text="bb"
                            android:textSize="14sp"
                            android:background="#FFFFFF"/>
                    </TableRow>
                    <TableRow
                        android:minHeight="45dp"
                        android:layout_marginTop="1dp">
                        <TextView
                            android:paddingLeft="5dp"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="주차 여부"
                            android:textSize="14sp"
                            android:background="#EFEFEF"/>
                        <TextView
                            android:paddingLeft="10dp"
                            android:id="@+id/detailroom_parking_textview"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:gravity="center_vertical"
                            android:text="cc"
                            android:textSize="14sp"
                            android:background="#FFFFFF"/>
                    </TableRow>
                    <TableRow
                        android:minHeight="45dp"
                        android:layout_marginTop="1dp">
                        <TextView
                            android:paddingLeft="5dp"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="이용 기간"
                            android:textSize="14sp"
                            android:background="#EFEFEF"/>
                        <TextView
                            android:paddingLeft="10dp"
                            android:id="@+id/detailroom_term_textview"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:gravity="center_vertical"
                            android:text="dd"
                            android:textSize="14sp"
                            android:background="#FFFFFF"/>
                    </TableRow>
                    <TableRow
                        android:minHeight="45dp"
                        android:layout_marginTop="1dp">
                        <TextView
                            android:paddingLeft="5dp"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="입주가능날짜"
                            android:textSize="14sp"
                            android:background="#EFEFEF"/>
                        <TextView
                            android:paddingLeft="10dp"
                            android:id="@+id/detailroom_movein_textview"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:gravity="center_vertical"
                            android:text="ee"
                            android:textSize="14sp"
                            android:background="#FFFFFF"/>
                    </TableRow>
                </TableLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="상세 설명"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="30dp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#EFEFEF"
                    android:layout_marginTop="10dp"
                    android:layout_marginHorizontal="10dp"/>
                <TextView
                    android:id="@+id/detailroom_title_textview"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="left"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginTop="30dp"
                    android:text="타이틀"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#000000"/>
                <TextView
                    android:id="@+id/detailroom_explain_textview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:textSize="12sp"
                    android:text="내용"
                    android:layout_marginHorizontal="15dp"
                    android:paddingHorizontal="3dp"
                    android:minHeight="100dp"/>

                <TextView
                    android:id="@+id/detailroom_date_textview"
                    android:layout_width="match_parent"
                    android:layout_height="33dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="20dp"
                    android:text="21-07-14" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="위치 및 유저 정보"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="30dp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#EFEFEF"
                    android:layout_marginTop="10dp"
                    android:layout_marginHorizontal="10dp"/>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:padding="8dp"
                    android:layout_marginTop="15dp"
                    android:background="#FFFFFF">

                    <Button
                        android:id="@+id/detailroom_call_btn"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/ic_call"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.773"
                        app:layout_constraintStart_toEndOf="@+id/textView7"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.44" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardView2"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="24dp"
                        app:cardCornerRadius="100dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.466">
                        <ImageView
                            android:id="@+id/detailroom_profile_imageview"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_user_profile"/>
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/detailroom_userid_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_marginStart="24dp"
                        android:text="user_name"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/cardView2"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.29" />

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="50dp"
                        android:layout_height="20dp"
                        android:layout_marginEnd="16dp"
                        android:background="@drawable/button_shape_write"
                        android:gravity="center"
                        android:text="인증"
                        android:textColor="#92D3CD"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.137"
                        app:layout_constraintStart_toEndOf="@+id/detailroom_userid_textview"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.266" />

                    <TextView
                        android:id="@+id/detailroom_address_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_marginStart="24dp"
                        android:text="주소"
                        android:textSize="10sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/cardView2"
                        app:layout_constraintTop_toBottomOf="@+id/detailroom_userid_textview"
                        app:layout_constraintVertical_bias="0.0" />
                </androidx.constraintlayout.widget.ConstraintLayout>
                <RelativeLayout
                    android:visibility="gone"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/button_shape_write"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginHorizontal="15dp">

                    <ImageView
                        android:layout_width="27dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="5dp"
                        android:layout_toLeftOf="@+id/detailroom_location_btn"
                        android:background="@drawable/ic_bottom_location_clicked" />

                    <TextView
                        android:id="@+id/detailroom_location_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:text="지도에서 위치 확인"
                        android:textColor="#000000" />
                </RelativeLayout>

                <androidx.cardview.widget.CardView
                    android:layout_marginVertical="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    app:cardCornerRadius="15dp">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/banner_bongbong"/>
                </androidx.cardview.widget.CardView>


            </LinearLayout>




        </LinearLayout>
    </ScrollView>
    <Button
        android:id="@+id/detailroom_inquire_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="문의하기"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:background="#565656"/>

</LinearLayout>