<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailRoomActivity"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#79CCC8">
        <Button
            android:id="@+id/detailroom_back_btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/ic_back_white"
            tools:ignore="SpeakableTextPresentCheck" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true">

            <Button
                android:id="@+id/detailroom_favorite_btn"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/ic_favorite_white" />

            <Button
                android:id="@+id/detailroom_share_btn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/ic_share"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"/>
        </LinearLayout>
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#DFDFDF"
            android:paddingVertical="10dp">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="250dp"
                app:cardCornerRadius="10dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="5dp">
                <androidx.viewpager.widget.ViewPager
                    android:id="@+id/detailroom_image_pager"
                    android:layout_width="match_parent"
                    android:layout_height="250dp" />
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp"
                android:background="@drawable/layout_shape">
                <TextView
                    android:id="@+id/detailroom_price_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="월세 500/45"
                    android:textSize="30sp"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/detailroom_address_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="주소"
                    android:textSize="18sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/layout_shape"
                android:layout_marginHorizontal="10dp"
                android:padding="8dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_marginTop="20dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="구조"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textSize="20sp"/>
                        <TextView
                            android:id="@+id/detailroom_roomkinds_textview"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_marginTop="10dp"
                            android:text="하하"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="#27B2AB"/>
                    </LinearLayout>
                    <View
                        android:layout_width="2dp"
                        android:layout_height="90dp"
                        android:layout_gravity="center"
                        android:background="#B7B7B7"/>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_marginTop="20dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="관리비"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textSize="20sp"/>
                        <TextView
                            android:id="@+id/detailroom_adminfee_textview"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_marginTop="10dp"
                            android:text="히히"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="#27B2AB"/>
                    </LinearLayout>
                    <View
                        android:layout_width="2dp"
                        android:layout_height="90dp"
                        android:layout_gravity="center"
                        android:background="#B7B7B7"/>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_marginTop="20dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="층 수"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textSize="20sp"/>
                        <TextView
                            android:id="@+id/detailroom_floor_textview"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_marginTop="10dp"
                            android:text="250층"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="#27B2AB"/>
                    </LinearLayout>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#EFEFEF"/>

                <TextView
                    android:id="@+id/detailroom_title_textview"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="left"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="30dp"
                    android:text="타이틀"
                    android:textStyle="bold"
                    android:textSize="25sp"
                    android:textColor="#000000"/>
                <TextView
                    android:id="@+id/detailroom_explain_textview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:textSize="15sp"
                    android:text="내용"
                    android:layout_marginHorizontal="40dp"
                    android:minHeight="100dp"/>
                <TextView
                    android:id="@+id/detailroom_date_textview"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="21-07-14"
                    android:gravity="right"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:layout_marginHorizontal="10dp"
                android:background="@drawable/layout_shape"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="상세 정보"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#EFEFEF"
                    android:layout_marginTop="5dp"
                    android:layout_marginHorizontal="10dp"/>
                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:background="#A0A0A0"
                        android:layout_marginHorizontal="30dp"
                        android:layout_marginVertical="15dp">
                        <TableRow
                            android:minHeight="50dp">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:text="면적"
                                android:textStyle="bold"
                                android:textSize="18sp"
                                android:background="#EFEFEF"/>
                            <TextView
                                android:paddingLeft="5dp"
                                android:id="@+id/detailroom_area_textview"
                                android:background="#FFFFFF"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="2"
                                android:gravity="center_vertical"
                                android:text="aa"
                                android:textStyle="bold"
                                android:textSize="18sp"/>
                        </TableRow>
                        <TableRow
                            android:minHeight="50dp"
                            android:layout_marginTop="1dp">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:text="옵션"
                                android:textStyle="bold"
                                android:textSize="18sp"
                                android:background="#EFEFEF"/>
                            <TextView
                                android:paddingLeft="5dp"
                                android:id="@+id/detailroom_option_textview"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="2"
                                android:gravity="center_vertical"
                                android:text="bb"
                                android:textStyle="bold"
                                android:textSize="18sp"
                                android:background="#FFFFFF"/>
                        </TableRow>
                        <TableRow
                            android:minHeight="50dp"
                            android:layout_marginTop="1dp">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:text="주차 여부"
                                android:textStyle="bold"
                                android:textSize="18sp"
                                android:background="#EFEFEF"/>
                            <TextView
                                android:paddingLeft="5dp"
                                android:id="@+id/detailroom_parking_textview"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="2"
                                android:gravity="center_vertical"
                                android:text="cc"
                                android:textStyle="bold"
                                android:textSize="18sp"
                                android:background="#FFFFFF"/>
                        </TableRow>
                        <TableRow
                            android:minHeight="50dp"
                            android:layout_marginTop="1dp">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:text="이용 기간"
                                android:textStyle="bold"
                                android:textSize="18sp"
                                android:background="#EFEFEF"/>
                            <TextView
                                android:paddingLeft="5dp"
                                android:id="@+id/detailroom_term_textview"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="2"
                                android:gravity="center_vertical"
                                android:text="dd"
                                android:textStyle="bold"
                                android:textSize="18sp"
                                android:background="#FFFFFF"/>
                        </TableRow>
                        <TableRow
                            android:minHeight="50dp"
                            android:layout_marginTop="1dp">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:text="입주가능날짜"
                                android:textStyle="bold"
                                android:textSize="14sp"
                                android:background="#EFEFEF"/>
                            <TextView
                                android:paddingLeft="5dp"
                                android:id="@+id/detailroom_movein_textview"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="2"
                                android:gravity="center_vertical"
                                android:text="ee"
                                android:textStyle="bold"
                                android:textSize="18sp"
                                android:background="#FFFFFF"/>
                        </TableRow>
                    </TableLayout>
                </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:padding="8dp"
                android:layout_marginTop="15dp"
                android:layout_marginHorizontal="10dp"
                android:background="@drawable/layout_shape">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView2"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="36dp"
                    app:cardCornerRadius="100dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.466">
                    <ImageView
                        android:id="@+id/detailroom_profile_imageview"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_user_profile"/>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/detailroom_userid_textview"
                    android:layout_width="250dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="24dp"
                    android:text="user_name"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/cardView2"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.109" />

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="24dp"
                    android:background="@drawable/button_shape_write"
                    android:gravity="center"
                    android:text="인증"
                    android:textColor="#92D3CD"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/cardView2"
                    app:layout_constraintTop_toBottomOf="@+id/detailroom_userid_textview"
                    app:layout_constraintVertical_bias="0.304" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </ScrollView>
    <Button
        android:id="@+id/detailroom_inquire_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="문의하기"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:background="#565656"/>

</LinearLayout>