<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <androidx.cardview.widget.CardView
            android:id="@+id/inquirelist_profile_cardview"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="28dp"
            app:cardCornerRadius="100dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.466" >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/inquirelist_profile_imageview"/>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/inquirelist_userid_textview"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="12dp"
            android:text="userId :"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/inquirelist_profile_cardview"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/inquirelist_message_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="3dp"
            android:text="다음주 토요일까지 입주 가능할까요 ?"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/inquirelist_profile_cardview"
            app:layout_constraintTop_toBottomOf="@+id/inquirelist_userid_textview" />

        <Button
            android:id="@+id/inquirelist_confighp_btn"
            android:layout_width="220dp"
            android:layout_height="40dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/button_shape_gray"
            android:text="userId님 연락처 확인"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/inquirelist_profile_cardview"
            app:layout_constraintTop_toBottomOf="@+id/inquirelist_message_textview" />


    </androidx.constraintlayout.widget.ConstraintLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#EFEFEF"
        android:layout_marginTop="10dp"
        />


</LinearLayout>